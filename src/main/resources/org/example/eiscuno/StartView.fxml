<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eiscuno.controller.StartUnoController">
   <children>
      <ImageView fitWidth="1920" fitHeight="1080" preserveRatio="true">
         <image>
            <Image url="@images/start_image.jpg" />
         </image>
      </ImageView>
      <VBox spacing="20" alignment="CENTER">
         <Button fx:id="buttonContinue" onAction="#loadGame" text="Continuar" />
         <Button fx:id="buttonStart" onAction="#goToPlayerSetUp" text="Jugar" />
         <Button fx:id="buttonExit" onAction="#exitGame" text="Salir" />
      </VBox>
   </children>
</StackPane>
