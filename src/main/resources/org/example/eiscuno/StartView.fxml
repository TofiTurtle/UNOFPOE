<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eiscuno.controller.StartUnoController">
   <children>
      <!-- Fondo: Imagen -->
      <ImageView fitWidth="1920" fitHeight="1080" preserveRatio="true">
         <image>
            <Image url="@images/start_image.jpg" />
         </image>
      </ImageView>

      <!-- Contenedor con fondo translúcido + título + botones -->
      <StackPane alignment="CENTER">
         <!-- Rectángulo translúcido tipo tarjeta -->
         <Rectangle width="350" height="320" arcWidth="30" arcHeight="30"
                    fill="rgba(0,0,0,0.6)" />

         <!-- Contenido: título + botones -->
         <VBox spacing="20" alignment="CENTER">
            <Label text="Bienvenido a UNO"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Button fx:id="buttonContinue" onAction="#loadGame" text="Continuar"
                    style="-fx-background-color: #5383c8; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 2, 2);" />
            <Button fx:id="buttonStart" onAction="#goToPlayerSetUp" text="Jugar"
                    style="-fx-background-color: #19ba6e; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 2, 2);" />
            <Button fx:id="buttonExit" onAction="#exitGame" text="Salir"
                    style="-fx-background-color: #dd4f5d; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 2, 2);" />
         </VBox>
      </StackPane>
   </children>
</StackPane>
